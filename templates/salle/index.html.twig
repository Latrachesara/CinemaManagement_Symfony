{% extends 'base.html.twig' %}

{% block title %}Salle index{% endblock %}

{% block body %}
    <style>
        a {
            color: white;
        }
    </style>
    <br><br>
    <h1>Les Salles de cinéma</h1>
<br>
    <table class="table">
        <thead>
            <tr>
                <th>numéro de la salle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td>{{ salle.id }}</td>
                <td>
                    <button type="button" class="btn btn-warning"><a href="{{ path('salle_show', {'id': salle.id}) }}">show</a></button>
                    <button type="button" class="btn btn-warning"><a href="{{ path('salle_edit', {'id': salle.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <button type="button" class="btn btn-secondary"><a href="{{ path('salle_new') }}">Create new</a></button>
    <br><br><br>
{% endblock %}
